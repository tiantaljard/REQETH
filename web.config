<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <directoryBrowse enabled="false" />
        <defaultDocument>
            <files>
                <clear />
                <add value="index.php" />
                <add value="index.htm" />
            </files>
        </defaultDocument>
        <rewrite>
            <rules>
                <rule name="rule 1A" stopProcessing="true">
                    <match url="^api/requests/?$" ignoreCase="true" />
                    <action type="Rewrite" url="/api/requests.php"  />
                </rule>
                <rule name="rule 2A" stopProcessing="true">
                    <match url="^api/requests/([0-9]+)/?$" ignoreCase="true" />
                    <action type="Rewrite" url="/api/requests.php?request={R:1}"  />
                </rule>

                <rule name="rule 3C" stopProcessing="true">
                <match url="^api/users/?$" ignoreCase="true" />
                <action type="Rewrite" url="/api/users.php"  />
                </rule>

            </rules>
        </rewrite>
    </system.webServer>
</configuration>