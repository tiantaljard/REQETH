<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <directoryBrowse enabled="false" />
        <defaultDocument>
            <files>
                <clear />
                <add value="index.php" />
                <add value="index.htm" />
            </files>
        </defaultDocument>
        <rewrite>
            <rules>
                <rule name="rule 1A" stopProcessing="true">
                    <match url="^requests/?$"  ignoreCase="true" />
                    <action type="Rewrite" url="/requests.php"  />
                </rule>
                <rule name="rule 2A" stopProcessing="true">
                    <match url="^requests/([0-9]+)/?$"  ignoreCase="true" />
                    <action type="Rewrite" url="/requests.php?request_id={R:1}"  />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>